a <- (12:31)
dim(a) <- c(5,4)
a
colnames(a) <- c("Toluca","Pachuca","Gdl","Mty")
a
rownames(a) <- c("escuela1","escuela2","escuela3","escuela 4","escuela5")
a
b <- matrix(0:17,nrow=6,ncol=3)
b[3,3]
