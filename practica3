ingreso[30:43] # valores desde a-b
ingreso[ingreso>40000] #valores mayores a 40000
ingreso[ingreso<22000]
ingreso[c(30,50,70)]  #valores saltiados
ingreso[seq(20,50,10)]
# | = o , & = y
ingreso[ingreso>22000 & ingreso<30000]

