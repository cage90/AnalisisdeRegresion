cuidad <- "toluca" #una entrada
nombres <- c("karla","rodrigo","miguel","samuel") #caracter tipo caracter y 4 entradas ("c" es para concatenar)
edad <- c(29,17,49,31)

#se utiliza la vuncion class para conocer qeu tipo de variables son
class(nombres)
class(edad)

base1 <- data.frame(nombres,edad) #se crea una base datos
View(base1) #ver base de datos

ls(base1) # ver lista de bariables de la base

base1$edad   #estaer datos de la variable de la base (nombreBase$nombreVariable)


##ejercicio crear una var de nombre sexo con 4 entradas 
## hombre es 1 y mujer es 2 la primera es mujer los demas son hombres
sexo <- c(2,1,1,1)

## vrear una base nueva con con nombre base2 con tres variabes nombre edad sexo
base2 <- data.frame(nombres,edad,sexo)
table(base2$sexo) #verlos valores de la variables (tabla)
table (base2$edad)

palumnos <- c(40,120,60,80) #alumno fac eco
etiq <- c("actua","eco","ri","neg")
help(pie)
pie (palumnos)
pie (palumnos,etiq)
pie (palumnos,etiq, main = "grafica de la fac eco")
pie (palumnos,etiq, main = "grafica de la fac eco",sub = "Fuente: fac economia")
pie (palumnos,etiq, main = "grafica de la fac eco",sub = "Fuente: fac economia",col = c("blue","red","pink","yellow"))
pie (palumnos,etiq, main = "grafica de la fac eco",sub = "Fuente: fac economia",col = c("blue","red","pink","yellow"),radius = 1)
pie (palumnos,etiq, main = "grafica de la fac eco",sub = "Fuente: fac economia",col = c("blue","red","pink","yellow"),radius = 1,clockwise = TRUE)
pie (palumnos,etiq, main = "grafica de la fac eco",sub = "Fuente: fac economia",col = c("blue","red","pink","yellow"),radius = 1.5,clockwise = TRUE,lty = 18)
